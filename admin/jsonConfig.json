{
  "type": "tabs",
  "tabsStyle": {
    "width": "calc(100% - 100px)"
  },
  "i18n": true,
  "items": {
    "usersTab": {
      "type": "panel",
      "label": "Users",
      "items": {
        "users": {
          "type": "table",
          "newLine": true,
          "xs": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "xl": 12,
          "label": "Users",
          "uniqueColumns": [ "name" ],
          "items": [
            {
              "type": "text",
              "title": "Name",
              "width": "15%",
              "attr": "name",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter user name"
            },
            {
              "type": "text",
              "title": "Phone",
              "width": "15%",
              "attr": "phone",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter phone number"
            },
            {
              "type": "text",
              "title": "Telegram ID",
              "width": "15%",
              "attr": "telegramId",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter Telegram ID"
            },
            {
              "type": "select",
              "title": "Расписание",
              "width": "15%",
              "attr": "schedule",
              "filter": false,
              "sort": false,
              "default": "рабочее время",
              "options": [
                {
                  "value": "рабочее время",
                  "label": "Рабочее время (9:00-18:00)"
                },
                {
                  "value": "любой день",
                  "label": "Любой день (круглосуточно)"
                },
                {
                  "value": "всегда",
                  "label": "Всегда (без ограничений)"
                }
              ]
            },
            {
              "type": "checkbox",
              "title": "Администратор",
              "width": "10%",
              "attr": "isAdmin",
              "filter": false,
              "sort": false,
              "default": false
            },
            {
              "type": "select",
              "title": "Devices",
              "width": "20%",
              "attr": "devices",
              "filter": false,
              "sort": false,
              "default": "",
              "options": [], // Пустой массив по умолчанию
              "query": "getDevicesList", // Отдельный параметр для запроса
              "multiple": true
            }
          ]
        }
      }
    },
    "devicesTab": {
      "type": "panel",
      "label": "Devices",
      "items": {
        "devices": {
          "type": "table",
          "newLine": true,
          "xs": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "xl": 12,
          "label": "Devices",
          "uniqueColumns": [ "name" ],
          "items": [
            {
              "type": "text",
              "title": "Name",
              "width": "25%",
              "attr": "name",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter device name"
            },
            {
              "type": "select",
              "title": "Object",
              "width": "35%",
              "attr": "object",
              "filter": false,
              "sort": false,
              "default": "",
              "options": [], // Пустой массив по умолчанию
              "query": "getObjectsList" // Отдельный параметр для запроса
            },
            {
              "type": "text",
              "title": "Command",
              "width": "40%",
              "attr": "command",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter command (e.g., OPEN, CLOSE)"
            }
          ]
        }
      }
    }
  }
}