{
  "type": "tabs",
  "tabsStyle": {
    "width": "calc(100% - 100px)"
  },
  "i18n": true,
  "items": {
    "usersTab": {
      "type": "panel",
      "label": "Users",
      "items": {
        "users": {
          "type": "table",
          "newLine": true,
          "xs": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "xl": 12,
          "label": "Users",
          "uniqueColumns": [ "name" ],
          "items": [
            {
              "type": "text",
              "title": "Name",
              "width": "20%",
              "attr": "name",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter user name"
            },
            {
              "type": "text",
              "title": "Phone",
              "width": "20%",
              "attr": "phone",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter phone number"
            },
            {
              "type": "text",
              "title": "Telegram ID",
              "width": "20%",
              "attr": "telegramId",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter Telegram ID"
            },
            {
              "type": "text",
              "title": "Расписание",
              "width": "20%",
              "attr": "schedule",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter schedule (e.g., 9:00-18:00)"
            },
            {
              "type": "checkbox",
              "title": "Администратор",
              "width": "10%",
              "attr": "isAdmin",
              "filter": false,
              "sort": false,
              "default": false
            },
            {
              "type": "text",
              "title": "Devices",
              "width": "10%",
              "attr": "devices",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter devices (comma-separated)"
            }
          ]
        }
      }
    },
    "devicesTab": {
      "type": "panel",
      "label": "Devices",
      "items": {
        "devices": {
          "type": "table",
          "newLine": true,
          "xs": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "xl": 12,
          "label": "Devices",
          "uniqueColumns": [ "name" ],
          "items": [
            {
              "type": "text",
              "title": "Name",
              "width": "30%",
              "attr": "name",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter device name"
            },
            {
              "type": "text",
              "title": "Object",
              "width": "30%",
              "attr": "object",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter object ID"
            },
            {
              "type": "text",
              "title": "Команда",
              "width": "40%",
              "attr": "command",
              "filter": false,
              "sort": false,
              "default": "",
              "placeholder": "Enter command (e.g., OPEN, CLOSE)"
            }
          ]
        }
      }
    }
  }
}